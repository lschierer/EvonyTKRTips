{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2023",
    "baseUrl": ".",
    "jsx": "preserve",
    "declaration": true,
    "declarationDir": "./types",
    "declarationMap": true,
    "noEmit": false,
    "emitDeclarationOnly": true
  },
  "include": ["./server.ts", "./src/**/*.ts"]
}
