{
  "name": "evonytkrtips",
  "author": "Luke Schierer",
  "type": "module",
  "version": "3.0.0",
  "packageManager": "bun@1.1.31",
  "description": "Evony TKR Tips Website and Infrastructure as Code",
  "scripts": {
    "lint": "eslint --flag unstable_ts_config",
    "build": "./scripts/build.sh || echo \"exit code $\"?",
