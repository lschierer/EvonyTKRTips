{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "composite": true,
    "declaration": true,
    "declarationDir": "./types",
    "declarationMap": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@schemas/*": ["./src/schemas/*"]
    }
  },
  "include": ["./src/**/*.ts"]
}
